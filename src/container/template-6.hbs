<header class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <div class="form">
        <h2 class="form_title">{{title}}</h2>

        <form class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}">
            {{/each}}
        </form>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>

    </div>
    {{/with}}
</main>

{{#with updates}}
<div class="updates">
    <h3 class="updates_title">{{title}}</h3>

    {{#each list}}
    <img src="https://picsum.photos/200/300" class="updates_image">
    <div class="updates_nickname">@{{nickname}}</div>
    <div class="updates_description">{{description}}</div>
    {{/each}}

    <a href="{{show_all.url}}" class="update_link_text">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}

<div class="expirience">
    <div class="expirience_header">
        <div class="expirience_badge">{{badge}}</div>
        <strong class="expirience_title">{{title}}</strong>
    </div>
    {{#each list}}
    <div class="expirience_list">
        <div class="list_name">{{name}}</div>
        <div class="list_details">{{details}}</div>
    </div>
    {{/each}}
</div>
{{/with}}

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>
<header class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>
{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h1 class="main_heading">{{heading}}</h1>
        <p class="main_description">{{descriotion}}</p>
        <div class="main_action">
            <a href="{{href}}" class="button main_button">{{button}}</a>
        </div>
    </div>
</div>
{{/with}}

<main class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</main>

<div class="form">
    {{#each actions}}
    <div class="form_content">
        <h4 class="form_title">{{heading}}</h4>
        <a href="{{url}}" class="button form_button">{{text}}</a>
    </div>
    {{/each}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>
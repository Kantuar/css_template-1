<div class="page">
    <div class="page_content">
        <header class="header">
            {{#with header}}
            <div class="header_up">
                <div class="header_logo">{{brandName}}</div>

                <div class="header_links">
                    {{#each links}}
                    <a href="{{url}}" class="header_links">{{text}}</a>
                    {{/each}}
                </div>
            </div>

            <div class="header_down">
                {{#with ad}}
                <div class="header_ad">
                    <div class="ad_logo">Ad</div>
                    <div class="ad_text">{{text}}: {{url}}</div>
                </div>
                {{/with}}
                <div class="header_user_online">Users online: {{userOnline}}</div>
            </div>
            {{/with}}
        </header>

        <div class="hero">
            {{#with hero}}
            <h1 class="hero_title">{{title}}</h1>
            <p class="hero_description">{{description}}</p>

            {{#with button}}
            <a href="{{url}}" class="button">{{text}}</a>
            {{/with}}

            {{/with}}
        </div>

        <div class="about">
            {{#with about}}
            <strong class="about_heading">{{heading}}</strong>
            <p class="about_info">{{info}}</p>
            {{/with}}
        </div>

        <div class="articles">
            <div class="articles_head">
                <strong class="articles_title">Our Articles</strong>
                <a href="#" class="articles_button">View All</a>
            </div>
            {{#each articles}}
            <div class="articles_content">
                <div class="articles_card">
                    <img src="{{photo}}" id="{{id}}" class="card_image">
                    <strong class="card_name">{{name}}</strong>
                    <p class="card_description">{{description}}</p>
                    <a href="#" class="button">Read all</a>
                </div>
            </div>
            {{/each}}
        </div>

        <footer class="footer">
            {{#with footer}}

            <div class="footer_pages_list">
                {{#each pages}}
                <a href="{{path}}" class="footer_pages">{{name}}</a>
                {{/each}}
            </div>

            <div class="footer_copyright">{{copyright}}</div>
            {{/with}}
        </footer>
    </div>
</div>